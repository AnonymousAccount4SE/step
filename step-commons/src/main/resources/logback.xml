<configuration scan="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="MEASUREMENTS" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>../log/measurement-logger.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>../log/measurement-logger-%i.log
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>2</maxIndex>
		</rollingPolicy>
		<triggeringPolicy
				class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>500KB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.lightcouch" level="error" />
	<!-- 	<logger name="step" level="debug" /> -->
	<logger name="step.grid.tokenpool.TokenPool" level="info" />
	<!-- <logger name="step.grid.filemanager" level="debug" /> -->

	<!-- This logger prints the collected measurement during test execution as JSON out if the related plugin is enabled -->
	<logger name="step.plugins.measurements.log.LogMeasurementPlugin" level="info" additivity="false">
		<appender-ref ref="MEASUREMENTS" />
		<!--<appender-ref ref="STDOUT" /> -->
	</logger>

	
	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>